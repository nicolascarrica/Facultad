programa Cap2Ejemplo1
procesos
  proceso hasta30
  variables
    flores:numero
  comenzar
    mientras(flores<30)
      mientras HayFlorEnLaEsquina
        tomarFlor
        flores := flores + 1
      si (PosCa<100)
        mover
  fin

areas 
  ciudad: AreaC (1,1,100,100) 
robots 
  robot robot1 
  comenzar 
    hasta30
  fin 
variables 
  R-info: robot1 
comenzar 
  AsignarArea (R-info,ciudad) 
  Iniciar (R-info,1,1) 
fin 
