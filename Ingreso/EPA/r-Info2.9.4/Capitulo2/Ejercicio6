programa Ejercicio2Cap2
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  comenzar
    Pos(75,45)
    repetir 2
      derecha
    repetir 30
      si HayFlorEnLaEsquina
        tomarFlor
      mover
    Informar(PosAv, PosCa)
  fin
variables
  rinfo: robot1
comenzar
  AsignarArea(rinfo, ciudad)
  Iniciar(rinfo, 1,1)
fin
   