programa Ejercicio8
areas
  ciudad: AreaC(1,1,100,100)
robots 
  robot robot1
  variables
    papeles:numero
  comenzar
    Pos(1,2)
    derecha
    papeles:=0
    mientras ((papeles < 10) & (PosAv<100))
      mientras (HayPapelEnLaEsquina)
        tomarPapel
        papeles:=papeles+1
      mover
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      papeles:=papeles+1
    Informar(papeles)
  fin

variables
  rinfo: robot1
comenzar
  AsignarArea (rinfo, ciudad)
  Iniciar(rinfo,1,1)
fin

       
        
      
       
    
    